email    <input type="text" name="email" id="email">
<br>
contact  <input type="text" name="contact" id="contact">
<br>
gst      <input type="text" name="gst" id="gst">
<br>
<button text="post" id="button"></button>
</body>

<script>

$("button").click(()=>{
	var name=$("#name").text;
	var address=$("#address").text;
	var email=$("#email").text;
	var contact=$("#contact").text;
	var gst=$("#gst").text;
	$post("/company/new", ({"name":name, "address":address, "email":email, "contact":contact, "gst":gst}, status)=>{
		console.log("data posted")
	}
})
</script>
